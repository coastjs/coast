{
    "id": "Example API",
    "port": "8080",
    "hostname": "0.0.0.0",
    "cors": ["*"],
    "apis": [
        {
            "title": "Get the user agent script.",
            "id": "useragent",
            "method": "GET",
            "uri": "/useragent"
        },
        {
            "title": "Enter the hypermedia api.",
            "id": "entry",
            "method": "GET",
            "uri": "/"
        },
        {
            "title": "Retrieve payment information.",
            "id": "payment",
            "method": "POST",
            "uri": "/payment/{id}",
            "headers": {
                "content-type": "application/x-www-form-urlencoded"
            },
            "body": [
                {
                    "title": "Before certain date?",
                    "name": "date",
                    "value": "now",
                    "type": "date"
                },
                {
                    "title": "Limit amount?",
                    "name": "limit",
                    "value": 1000,
                    "type": "number"
                }
            ]
        }
    ]
}
